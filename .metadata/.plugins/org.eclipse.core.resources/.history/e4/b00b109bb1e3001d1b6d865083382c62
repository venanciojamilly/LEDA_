package provas;

public class PontoBitonico {
	
	
	public static int PontoBit(int[]arr, int left, int right) {
		int result = -1;
		if (right >= left) {
			int middle = (left + right)/2;
			if (middle + 1 < arr.length && middle - 1>= left &&arr[middle]>arr[middle - 1] && arr[middle]>arr[middle + 1]) return arr[middle];
			else if (arr[middle] > arr[left]) result = PontoBit(arr,left,middle + 1);
			else result = PontoBit(arr,middle - 1,right);
		}
		return result;
	}
	
	
	public static void main(String[] args) {
		int[] n = new int[] {0, 1, 2 , 1};
		System.out.println(PontoBit(n,0,n.length - 1));
	}

}
