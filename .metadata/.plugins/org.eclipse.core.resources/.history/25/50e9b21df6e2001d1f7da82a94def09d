package provas;

public class BuscaBinaria {
	
	
	public static int BuscaBin(int[] numbers, int n, int left , int right) {
		if (right > left) {
		int middle = (left + right)/2;
		if (numbers[middle] == n) return middle;
		else if(numbers[middle] > n) BuscaBin(numbers,n,left,middle-1);
		else BuscaBin(numbers,n,middle +1, right);
		}
		return -1;
	}

	public static void main(String[] args) {
		int[] n = {2, 5, 9 , 40};
		System.out.println(BuscaBin(n,40,0,3));
	}

}
